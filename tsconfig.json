{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "keyofStringsOnly": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "plugins": [{ "name": "typescript-styled-plugin" }],
    "pretty": true,
    "strictNullChecks": false,
    "target": "es6",
    "lib": ["es6"],
    "types": ["jest", "react", "react-native"],
    "noEmit": true,
    "baseUrl": "./" /* Base directory to resolve non-absolute module names. */,
    "paths": {
      "src/*": ["src/*"],
      "res/*": ["res/*"],
      "storybook/*": ["storybook/*"]
    }
  },
  "include": ["typings/*.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "dangerfile.ts",
    "node_modules",
    "Pod/Assets",
    "Example/Build",
    "externals",
    "build",
    "index.ios.js",
    "**/__mocks__"
  ]
}
